<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pLight">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">

            <TextView
                android:id="@+id/tvTitleID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                style="@style/HeaderTxt"
                android:text="@string/enter_item" />

            <EditText
                android:id="@+id/etAddTaskID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitleID"
                style="@style/InputTxt"
                android:hint="@string/enter_task" />

            <EditText
                android:id="@+id/etNoID"
                style="@style/InputTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etAddTaskID"
                android:layout_centerHorizontal="true"
                android:hint="@string/no_task"
                android:inputType="number|numberDecimal" />
            <Button
                android:id="@+id/btSaveID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etNoID"
                android:layout_centerHorizontal="true"
                android:text="@string/save"
                android:background="@drawable/button_shape"
                style="@style/ButtonTxt"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>